<h1>Discounts Dashboard</h1>

<section>
  <h4><%= link_to('Create New Discount', new_merchant_discount_path) %></h4>

  <% @merchant.discounts.each do |discount| %>
    <div id="discount-<%= discount.id %>">
      <%= link_to("#{discount.percentage}% discount on #{discount.item_quantity} or more items",
                  merchant_discount_path(discount)) %>
    </div>
  <% end %>
</section>
