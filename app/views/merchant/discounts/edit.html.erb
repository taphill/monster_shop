<h1>Edit Discount</h1>

<%= form_with model: [:merchant, @discount], method: :patch, local: true do |f| %>
  <%= f.label :percentage %>
  <%= f.number_field(:percentage, in: 1..100, step: 1) %>

  <%= f.label :item_quantity %>
  <%= f.number_field(:item_quantity, step: 1) %>

  <%= f.submit 'Edit' %>
<% end %>
