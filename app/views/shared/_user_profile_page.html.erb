<h1>Hello, <%= user.name %></h1>

<center>
<section class="user-profile">
  <h3>User Profile</h3>
    <%= link_to "My Orders", profile_orders_path %> |
  <% if !current_admin? %>
    <%= link_to "Edit Password", profile_edit_path %> |
    <%= link_to "Edit Profile Data", "/profile/edit?request=profile" %>
  <% end %>

  <h3>My Info</h3>
  <p>Name: <%= user.name %><br/>
  Address: <%= user.street_address %><br/>
  City: <%= user.city %><br/>
  State: <%= user.state %><br/>
  Zip: <%= user.zip %></p>
  <p>Email: <%= user.email %></p>
  <p><b>Registered Member Since: <%= format_date(user.created_at) %></b></p>
</section>
</center>
